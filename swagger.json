        "/users/{username}": {
            "get": {
                "tags": ["users"],
                "summary": "Get user by username",
                "description": "The name that is being fetched",
                "produces": [
                "application/json"
                ],
                "parameters": [
                    {
                        "name": "username",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "The specified username is invalid."
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "An error occured"
                    }
                }
            },
            "put": {
                "tags": ["users"],
                "summary": "Update user",
                "description": "This is to edit a user - can only be used by the logged in user.",
                "parameters": [
                    {
                        "name": "username", 
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schema/users"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successful updated user"
                    },
                    "400": {
                        "description": "The specified username is invalid."
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "An error occured"
                    }
                }
            },
            "delete": {
                "tags": ["users"],
                "summary": "Delete one user",
                "description": "This is to delete a single user out of the database",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deletion successful"
                    },
                    "400": {
                        "description": "The specified username is invalid."
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "An error occured"
                    }
                }
            }
        },
